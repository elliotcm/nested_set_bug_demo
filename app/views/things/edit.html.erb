<h1>Editing thing</h1>

<% form_for(@thing) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :after_save_field %><br />
    <%= f.text_field :after_save_field %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @thing %> |
<%= link_to 'Back', things_path %>